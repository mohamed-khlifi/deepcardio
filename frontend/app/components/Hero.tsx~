"use client";

interface HeroProps {
    user: {
        name?: string;
        email?: string;
    } | undefined;
    isAuthenticated: boolean;
}

export default function Hero({ user, isAuthenticated }: HeroProps) {
    if (isAuthenticated) {
        return (
            <div className="text-center space-y-4 animate-fade-in">
                <h1 className="text-4xl font-bold text-gray-800">
                    Welcome back, <span className="text-blue-600">{user?.name}</span>
                </h1>
                <p className="text-lg text-gray-600">{user?.email}</p>
            </div>
        );
    }

    return (
        <div className="text-center max-w-xl space-y-6 animate-fade-in">
            <h1 className="text-5xl font-extrabold tracking-tight text-gray-900">
                Empowering Cardiac Care
            </h1>
            <p className="text-gray-600 text-lg">
                DeepCardio helps doctors monitor vitals, assess cardiovascular risk, and recommend proactive actions â€” all from one beautiful dashboard.
            </p>
        </div>
    );
}
